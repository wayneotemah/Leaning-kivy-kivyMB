        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "main"
    MDLabel:
        text: "W e l c o m e !"
        font_name: "assets/Poppins-Bold"
        font_size: "23sp"
        pos_hint: {"center_x": .59,"center_y": .87}
        #halign: "center"
    MDLabel:
        text: "Sign in to continue..."
        font_name: "assets/Poppins-Light"
        font_size: "16sp"
        pos_hint: {"center_x": .59,"center_y": .81}
        color: rgba(128,128,128, 225)
    MDTextField:
        id:admin
        hint_text: "Admisson Number"
        font_name: "assets/Poppins-Light"
        size_hint_x:.84
        multiline: False
        pos_hint: {"center_x":.5,"center_y": .69}
    MDTextField:
        id:password
        hint_text: "password"
        font_name: "assets/Poppins-Light"
        size_hint_x:.84
        multiline: False
        password: True
        pos_hint: {"center_x":.5,"center_y": .45}
    Button:
        text: "LOGIN"
        size_hint: .6, .065
        pos_hint: {"center_x":.5,"center_y": .21}
        font_name: "assets/Poppins-Bold"
        on_press: root.ditaLogin(admin,password)
        on_release: password.text = ""
        on_release: admin.text = ""
        canvas.before:
            Color:
                rgb:  app.theme_cls.primary_color
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]

    MDLabel:
        text: "Not registered as a member?"
        font_name: "assets/Poppins-Light"
        font_size: "13sp"
        halign: "center"
        pos_hint: {"center_x":.4,"center_y": .06}
        color: rgba(128,128,128, 225)
    MDTextButton:
        text: "Sign up"
        font_name: "assets/Poppins-Bold"
        font_size: "13sp"
        halign: "center"
        pos_hint: {"center_x":.85,"center_y": .06}
        color: rgba(128,128,128, 225)
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "signup"

