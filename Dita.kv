                    name:"HomeScreen"
                    icon:'home'
                    MDScreen:
                        ScrollView:
                            bar_width:0
                            MDBoxLayout:
                                orientation:'vertical'
                                padding:'20dp'
                                adaptive_height:True
                                MDLabel:
                                    text:'Home Screen'
                                    font_name:'assets/Poppins-Light'
