MDScreen:
    ScreenManager:
        MainScreen:
        LoginScreen:
        SignupScreen:
        AppScreen:


    #######SignUp screen#######################
<SignupScreen>:
    name:"signup"
    #md_bg_color:1,1,1,1
    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_y":.98}
        user_font_size:"30sp"
        theme_text_color:"Custom"
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "main"
    MDLabel:
        text: "H i !"
        font_name: "assets/Poppins-Bold"
        font_size: "23sp"
        pos_hint: {"center_x": .59,"center_y": .87}
        #halign: "center"
    MDLabel:
        text: "Create a new account ..."
        font_name: "assets/Poppins-Light"
        color: rgba(128,128,128, 225)
        font_size: "16sp"
        pos_hint: {"center_x": .59,"center_y": .81}
        #halign: "center"
    MDTextField:
        id:signupadmin
        hint_text: "Admission number"
        font_name: "assets/Poppins-Light"
        size_hint_x:.84
        multiline: False
        pos_hint: {"center_x":.5,"center_y": .69}
    MDTextField:
        id:signupemail
        hint_text: "Email"
        #mode: "rectangle"
        font_name: "assets/Poppins-Light"
        size_hint_x:.84
        multiline: False
        pos_hint: {"center_x":.5,"center_y": .60}
    MDTextField:
        id:signuppassword
        hint_text: "Password"
        #mode: "rectangle"
        font_name: "assets/Poppins-Light"
        size_hint_x:.84
        multiline: False
        password: True
        pos_hint: {"center_x":.5,"center_y": .51 }
    Button:
        text: "SIGNUP"
        size_hint: .6, .065
        pos_hint: {"center_x":.5,"center_y": .39}
        font_name: "assets/Poppins-Bold"
        on_press: root.ditasignup(signupadmin,signuppassword,signupemail)
        on_release: signupadmin.text = ""
        on_release: signuppassword.text = ""
        on_release: signupemail.text = ""

        canvas.before:
            Color:
                rgb:  app.theme_cls.primary_color
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]
    MDLabel:
        text: "or"
        haligh: "center"
        pos_hint: {"center_x":1,"center_y": .30}
        font_size: "13sp"
        font_name: "assets/Poppins-Bold"
    MDFloatLayout:
        md_bg_color: rgba(0,0,0, 225)
        size_hint: .3, .001
        pos_hint: {"center_x":.25,"center_y": .298}
    MDFloatLayout:
        md_bg_color: rgba(0,0,0, 225)
        size_hint: .3, .001
        pos_hint: {"center_x":.75,"center_y": .298}
    MDLabel:
        text: "Sign up with:"
        font_name: "assets/Poppins-Bold"
        font_size: "13sp"
        halign: "center"
        pos_hint: {"center_y": .24}
    MDGridLayout:
        cols:2
        size_hint: .45,.07
        pos_hint: {"center_x":.5,"center_y": .15}
        Image:
            source: "assets/dg.png"
        Image:
            source: "assets/google.png"
    MDLabel:
        text: "Already have member?"
        font_name: "assets/Poppins-Light"
        font_size: "13sp"
        halign: "center"
        pos_hint: {"center_x":.4,"center_y": .06}
        color: rgba(128,128,128, 225)
    MDTextButton:
        text: "Sign in"
        font_name: "assets/Poppins-Bold"
        font_size: "13sp"
        halign: "center"
        pos_hint: {"center_x":.8,"center_y": .06}
        color: rgba(128,128,128, 225)
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "login"

#########Login Screen######################
<LoginScreen>:
    id:loginsc
    name:"login"
    #md_bg_color:1,1,1,1
    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"center_y":.98}
        user_font_size:"30sp"
