##################the main application screens################



<AppScreen>:
    name: "AppScreen"
    MDBoxLayout:
        orientation:"vertical"
        MDBottomNavigation:
            MDBottomNavigationItem:
                HomeScreen:
            MDBottomNavigationItem:
                EvenScreen:
            MDBottomNavigationItem:
                CommunityScreen:
            MDBottomNavigationItem:
                ProfileScreen:


<HomeScreen>:
    name:"HomeScreen"
    icon:'home'
    MDScreen:
        ScrollView:
            bar_width:0
            MDBoxLayout:
                orientation:'vertical'
                padding:'20dp'
                adaptive_height:True
                MDLabel:
                    text:'Home Screen'
                    font_name:'assets/Poppins-Light'
                    adaptive_height:True

<EvenScreen>:
    name:"EvenScreen"
    icon:'calendar-star'
    MDScreen:
        ScrollView:
            bar_width:0
            MDBoxLayout:
                orientation:'vertical'
                padding:'20dp'
                adaptive_height:True
                MDLabel:
                    text:'Event Screen'
                    font_name:'assets/Poppins-Light'
                    adaptive_height:True

<CommunityScreen>:
    name:"CommunityScreen"
    icon:'account-group'
    MDScreen:
        ScrollView:
            bar_width:
            MDBoxLayout:
                orientation:'vertical'
                padding:'5dp'
                adaptive_height:True
                MDLabel:
                    text:'Community Screen'
                    font_name:'assets/Poppins-Light'
                    adaptive_height:True
                MDList:
                    id: contact_list

<ProfileScreen>:
    name:"ProfileScreen"
    icon:'account'
    MDScreen:
        padding:20
        MDFloatLayout:
            orientation:'vertical'
            adaptive_height:True
            canvas:
                Color:
                    rgb: 1, 1, 1
                Ellipse:
                    pos: (70,340)
                    size: 200 , 200
                    source: 'assets/profile.jpg'
                    size: 150,150
                    angle_start: 0
                    angle_end: 360
            MDLabel:
                text:"Profile"
                padding: (10,10)
                pos_hint: {'center_y':3.3}
                font_name: "assets/Poppins-Bold"
                font_size: "16sp"
                color: rgba(128,128,128, 225)

            MDLabel:
                text:"Name:"
                padding: (10,10)
                pos_hint: {"center_y": 3}
                font_name: "assets/Poppins-Light"
                font_size: "16sp"
                color: rgba(128,128,128, 225)

            MDLabel:
                text:"E g e s a   W a y n e"
                padding: (10,10)
                pos_hint: {"center_y": 2.8}
                font_name: "assets/Poppins-Bold"
                font_size: "16sp"
                #color: rgba(128,128,128, 225)

            MDLabel:
                text:"Amission Number:"
                padding: (10,10)
                pos_hint: {"center_y": 2.5}
                font_name: "assets/Poppins-Light"
                font_size: "16sp"
                color: rgba(128,128,128, 225)

            MDLabel:
                text:"21-0265"
                padding: (10,10)
                pos_hint: {"center_y": 2.3}
                font_name: "assets/Poppins-Light"
                font_size: "16sp"
                #color: rgba(128,128,128, 225)

            MDLabel:
                text:"Contacts:"
                padding: (10,10)
                pos_hint: {"center_y": 2}
                font_name: "assets/Poppins-Light"
                font_size: "16sp"
                color: rgba(128,128,128, 225)

            MDLabel:
                text:"0720585414 | egesa@daystar.ac.ke"
                padding: (10,10)
                pos_hint: {"center_y": 1.8}
